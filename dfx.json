{
  "canisters": {
    "ICDexPair": {
      "main": "src/ICDexPair.mo",
      "type": "motoko",
      "args" : "--incremental-gc"
    },
    "ICDexMaker": {
      "main": "src/ICDexMaker.mo",
      "type": "motoko",
      "args" : "--compacting-gc"
    },
    "RouterMain": {
      "main": "src/ICDexRouter.mo",
      "type": "motoko",
      "args" : "--compacting-gc",
      "optimize": "size"
    },
    "RouterTest": {
      "main": "src/ICDexRouter.mo",
      "type": "motoko",
      "args" : "--compacting-gc",
      "optimize": "size"
    }
  },
  "defaults": {
    "build": {
      "packtool": "vessel sources"
    }
  },
  "networks": {
    "ic": {
      "providers": ["https://ic0.app"],
      "type": "persistent"
    },
    "local": {
      "bind": "0.0.0.0:8000",
      "type": "ephemeral"
    }
  }
}
